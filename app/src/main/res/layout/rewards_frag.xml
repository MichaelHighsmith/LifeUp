<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rewards_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewards"
        android:background="@drawable/scroll_header_background"
        android:textAppearance="@style/Header"
        android:gravity="center"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rewards_title"
        android:id="@+id/rewards_list"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/rewards_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorDarkRed"
        app:rippleColor="@color/colorBlack"
        android:src="@drawable/plus"/>

</RelativeLayout>