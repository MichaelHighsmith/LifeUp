<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/adventure_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adventure"
        android:typeface="serif"
        android:background="@drawable/scroll_header_background_two"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"/>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adventure_header"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bat_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bat"
                    android:layout_weight="1"
                    android:background="@drawable/scroll_background_vertical"/>

                <ImageView
                    android:id="@+id/slime_monster_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slime_monster"
                    android:layout_weight="1"
                    android:background="@drawable/scroll_background_vertical"/>

                <ImageView
                    android:id="@+id/spider_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/spider"
                    android:layout_weight="1"
                    android:background="@drawable/scroll_background_vertical"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/octopus_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/octopus"
                    android:layout_weight="1"
                    android:background="@drawable/scroll_background_vertical"/>

                <ImageView
                    android:id="@+id/wolf_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wolf"
                    android:layout_weight="1"
                    android:background="@drawable/scroll_background_vertical"/>



                <ImageView
                    android:id="@+id/snake_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/snake"
                    android:layout_weight="1"
                    android:background="@drawable/scroll_background_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/crab_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/crab"
                    android:background="@drawable/scroll_background_vertical"/>


                <ImageView
                    android:id="@+id/ghost_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ghost"
                    android:layout_weight="1"
                    android:background="@drawable/scroll_background_vertical"/>

                <ImageView
                    android:id="@+id/boy_enemy_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/boy_enemy"
                    android:background="@drawable/scroll_background_vertical"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fire_dragon_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fire_dragon"
                    android:background="@drawable/scroll_background_vertical"/>

                <ImageView
                    android:id="@+id/girl_enemy_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/girl_enemy"
                    android:background="@drawable/scroll_background_vertical"/>



                <ImageView
                    android:id="@+id/grim_reaper_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/grim_reaper"
                    android:background="@drawable/scroll_background_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/slime_monster_multiple_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/slime_monster_multiple"
                    android:background="@drawable/scroll_background_vertical"/>

                <ImageView
                    android:id="@+id/triclops_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/triclops"
                    android:layout_weight="1"
                    android:background="@drawable/scroll_background_vertical"/>


                <ImageView
                    android:id="@+id/ice_dragon_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dragon_full"
                    android:layout_weight="1"
                    android:background="@drawable/scroll_background_vertical"/>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>