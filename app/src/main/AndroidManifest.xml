<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.satyrlabs.lifeup">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/boy_start"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TaskEditorActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".RewardsEditorAcitivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".BattleActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent"/>
        <!--This provider might need to change if we add a 2nd table-->
        <provider
            android:authorities="com.satyrlabs.lifeup"
            android:name=".data.TaskProvider"
            android:exported="false"/>
    </application>

</manifest>